[Unit]
Description="Stolon Proxy - The client access point"
Documentation=https://github.com/sorintlab/stolon/blob/master/doc/README.md
Requires=stolon-keeper.service
After=stolon-keeper.service

[Service]
EnvironmentFile=/etc/sysconfig/stolon

Type=simple
User=postgres
Group=postgres

PermissionsStartOnly=true
ExecStart=/usr/bin/stolon-proxy --cluster-name ${CLUSTER_NAME} --store-backend ${STORE_BACKEND}
Restart=on-failure
LimitNOFILE=65536

[Install]
WantedBy=stolon-keeper.service